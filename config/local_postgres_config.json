        }
    },
    "fct_queimadas_sink": {
        "sink_type": "postgres",
        "jdbc_url": "jdbc:postgresql://localhost:5332/wildfire",
        "table_name": "fct_queimada",
        "mode": "overwrite",
        "connection_properties": {
            "user": "wildfire",
            "password": "wildfire",
            "driver": "org.postgresql.Driver"
        }
    },
    "fct_clima_sink": {
        "sink_type": "postgres",
        "jdbc_url": "jdbc:postgresql://localhost:5332/wildfire",
